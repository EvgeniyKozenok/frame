{% extends "default.html.twig" %}

{% block sidebar %}
    <hr/>
    <form class="form-horizontal" method="POST" action="mobileFilter.php">
        <legend>
            <div class="alert alert-info" align="center">
                <h4>{% filter upper %} параметры фильтра{% endfilter %}</h4>
            </div>
        </legend>
        <div class="alert alert-default" align="center"><h4
                    style="color:#000;">{% filter upper %}цена{% endfilter %}</h4><br/>
            <input id="min-price" name="minPrice" value={{ price.minPrice }} type="text" class="span1"
                   style="height: 30px; text-align: center">
            ...
            <input id="max-price" name="maxPrice" value={{ price.maxPrice }} type="text" class="span1"
                   style="height: 30px; text-align: center"">
        </div>
        {% for filter in filters %}
            <div class="alert alert-default" align="center"><h4 class="text-uppercase"
                                                                style="color:#000;">{% filter upper %}{{ filter.name }}{% endfilter %}</h4>
                <br/>
                {% for field in filter.parameters %}
                    {#{% for brand in filters.brands %}#}
                    <div>
                        <label class="checkbox">
                            {#filter.field - поле из таблицы#}
                            <input type="checkbox" name={{ filter.field }}>
                            <p style="text-align:left; color:#000;">{% filter capitalize %}{{ field.parameter }}{% endfilter %}</p>
                        </label>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        <div align="center">
            <button type="submit" class="btn btn-success">{% filter upper %} применить фильтр{% endfilter %}</button>
        </div>
    </form>
{% endblock %}

{% block content %}
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href={{ route('root') }}><i class="icon-white icon-home"></i></a></li> /
            <li class="active">{Мобильные телефоны}</li>
        </ul>
        <h3> {Мобильные телефоны}
            <small class="pull-right"> {всего найдено наименований}</small>
        </h3>
        <hr class="soft"/>
        <form class="form-horizontal span6" method="POST" action="mobileSort.php">
            <div class="control-group">
                <label class="control-label alignL">Сортировать по:</label>
                <select>
                    <option name='sortName'>Имени А - Я</option>
                    <option name='sortNameDesc'>Имени Я - А</option>
