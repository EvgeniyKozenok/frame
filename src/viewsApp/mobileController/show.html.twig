                <hr class="soft"/>
            </div>

            <div class="tab-pane  active" id="blockView">
                <ul class="thumbnails">
                    <li class="span3">
                        <div class="thumbnail">
                            <a href="product_details.html"><img src="/public/images/001435404.jpeg" alt=""/></a>
                            <div class="caption" align="center">
                                <h5>название</h5>
                                <p>краткое описание</p>
                                <h4 style="text-align:center">
                                    <a class="btn btn-info" href="#">&#8372;{price}</a></h4>
                                <a href="product_details.html" class="btn btn-danger">Сравнить</a>
                                <a class="btn btn btn-success" href="#">В корзину<i class="icon-shopping-cart"></i></a>
                            </div>
